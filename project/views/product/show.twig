{% extends 'layout.twig' %}

{% block body %}
    <div class="container">
        <h3><a href="/product">Product List</a></h3>
        <h1>Product Detail</h1>
        <table>
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>{{ product.price }}</td>
                </tr>
            </tbody>
        </table>
        <h3><a href="/product/edit/{{ product._id }}">EDIT</a></h3>
        <form action="/product/delete/{{ product._id }}" method="post">
            <button type="submit">DELETE</button>
        </form>
    </div>
{% endblock %}